  "scripts": {
    "dev": "vite dev --port 5010",
    "clean": "node -e \"require('fs').rmSync('docs', {recursive:true, force:true})\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
